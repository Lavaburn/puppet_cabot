# Plugins to be loaded at launch
CABOT_PLUGINS_ENABLED=<%= @config_plugins_enabled %>

# Static Settings
HIPCHAT_URL=https://api.hipchat.com/v1/rooms/message

# General Settings
DATABASE_URL=postgres://<%= @config_db_username -%>:<%= @config_db_password -%>@<%= @config_db_hostname -%>:<%= @config_db_port -%>/<%= @config_db_database %>
DJANGO_SETTINGS_MODULE=cabot.settings

CELERY_BROKER_URL=redis://<%= @config_redis_hostname -%>:<%= @config_redis_port -%>/<%= @config_redis_database %>
DJANGO_SECRET_KEY=<%= @config_django_secret %>
		
VENV=<%= @config_env_dir %>
PORT=<%= @config_port %>


#DEBUG=t
LOG_FILE=/dev/null


# Local time zone for this installation. Choices can be found here:
# http://en.wikipedia.org/wiki/List_of_tz_zones_by_name
TIME_ZONE=<%= @config_timezone %>

# Django admin email
ADMIN_EMAIL=<%= @config_admin_address %>
CABOT_FROM_EMAIL=<%= @config_admin_address %>


# Plugins and Alerts
# URL of calendar to synchronise rota with
#CALENDAR_ICAL_URL=http://www.google.com/calendar/ical/example.ics
				
# Hostname of your Graphite server instance
GRAPHITE_API=<%= @config_graphite_host %>
GRAPHITE_USER=<%= @config_graphite_username %>
GRAPHITE_PASS=<%= @config_graphite_password %>
# From parameter for the graphite request. If not defined, by default take -10 minutes
# GRAPHITE_FROM=-10minute
		
# Hipchat integration
<% if @config_hipchat_room_id -%>
HIPCHAT_ALERT_ROOM=<%= @config_hipchat_room_id %>
<% end -%>
<% if @config_hipchat_api_key -%>
HIPCHAT_API_KEY=<%= @config_hipchat_api_key %>
<% end -%>
		
# Jenkins integration
#JENKINS_API=https://jenkins.example.com/
#JENKINS_USER=username
#JENKINS_PASS=password
		
# SMTP settings
<% if @config_smtp_host -%>
SES_HOST=<%= @config_smtp_host %>
<% end -%>
<% if @config_smtp_port -%>
SES_PORT=<%= @config_smtp_port %>
<% end -%>
<% if @config_smtp_username -%>
SES_USER=<%= @config_smtp_username %>
<% end -%>
<% if @config_smtp_password -%>
SES_PASS=<%= @config_smtp_password %>
<% end -%>

